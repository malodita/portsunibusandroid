<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/timetableFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.malcolm.portsmouthunibus.ui.timetable.TimetableFragment">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/timetable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/top_layout"
            layout="@layout/viewgroup_timetable_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:fadeScrollbars="true"
            app:fastScrollEnabled="true"
            android:layoutAnimation="@anim/home_appear_animation"
            tools:layoutAnimation="@android:anim/fade_out"
            app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
            app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
            app:fastScrollHorizontalTrackDrawable="@drawable/bar_drawable"
            app:fastScrollVerticalTrackDrawable="@drawable/bar_drawable"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"
            tools:listitem="@layout/list_item_timetable"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/no_timetable"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/top_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/error_no_timetable_selected"
            android:textSize="@dimen/text_primary_size"
            android:visibility="gone"
            />

    </android.support.constraint.ConstraintLayout>



