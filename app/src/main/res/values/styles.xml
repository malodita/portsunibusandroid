    </style>

    <!--Custom View Styles-->

    <style name="AppTheme.New.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="colorPrimary">@color/background</item>
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppTheme.New.DayNight.Caption</item>
        <item name="android:textColorSecondary">@color/toolbar_text</item>
        <item name="colorControlNormal">@color/toolbar_text</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.New.Toolbar.Overflow</item>
        <item name="fontFamily">@font/raleway_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:actionBarPopupTheme">@style/AppTheme.New.Menu</item>
    </style>

    <style name="AppTheme.New.Menu" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:colorPrimary">@color/background</item>
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="android:textColorSecondary">@color/toolbar_text</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="AppTheme.New.Toolbar.Overflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/toolbar_text</item>
    </style>

    <style name="AppTheme.New.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">0dp</item>
    </style>

    <style name="AppTheme.New.Button.OutlinedButton.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button</item>
        <item name="iconTint">@color/button</item>
        <item name="strokeColor">@color/button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.New.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.New.Switch" parent="AppTheme.New.DayNight">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/selection_color</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/selection_color</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
    </style>


