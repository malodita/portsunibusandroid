<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textview_primary_color</item>
        <item name="android:textColorPrimaryInverse">@color/textview_inverse_color</item>
        <item name="android:textColorSecondary">@color/textview_secondary_color</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:popupBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textview_primary_color</item>
        <item name="android:textColorPrimaryInverse">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme">
    </style>

    <style name="AppTheme.AboutActivityDay" parent="Theme.Mal.Dark">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.AboutActivityNight" parent="Theme.Mal.Dark">
        <item name="colorPrimary">#190c22</item>
        <item name="colorPrimaryDark">#09040d</item>
        <item name="colorAccent">#ffd740</item>
    </style>

    <style name="AppTheme.ActionBar.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/icons</item>
    </style>

</resources>
